#!/usr/local/bin/containerflight run
compatibility: ">=0.2.0-snapshot <1.0.0"

gui: true

image:
    base: docker://ubuntu:18.04
    dockerfile: |
        ${APT_INSTALL(hugin)}

        ENTRYPOINT "/usr/bin/hugin"

runtime:
    docker:
        runargs: [
            "-ti",
            "-a", "stdin",
            "-a", "stdout",
            "-v", "/dev:/dev",
            "--privileged"
        ]
